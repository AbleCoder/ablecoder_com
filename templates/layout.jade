!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu:300,500,300italic')
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/ablecoder.css')
  body
    header.page-head
      h1
        a(href=locals.url)= locals.name
      p= locals.description
    div#content
      block content
        h2 Welcome to zombocom!
    footer
      div.inner
        block footer
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
